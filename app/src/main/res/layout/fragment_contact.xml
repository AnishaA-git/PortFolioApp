<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".fragments.FragmentContact">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/phone_wrapper"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_phone"
                android:src="@drawable/icon_phone"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/icon_phone"
                android:layout_toEndOf="@+id/icon_phone"
                android:text="+003 123234 , 2343556"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address_wrapper"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_place"
                android:src="@drawable/icon_place"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/txt_place"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/icon_place"
                android:layout_toEndOf="@+id/icon_place"
                android:text="California, USA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_wrapper"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_email"
                android:src="@drawable/icon_mail"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/icon_email"
                android:layout_toEndOf="@+id/icon_email"
                android:text="admin@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>