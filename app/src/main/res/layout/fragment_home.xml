<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragments.FragmentHome">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_background"
        app:layout_constraintBottom_toBottomOf="@id/hg30"
        android:background="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_image"
                android:scaleType="centerCrop"
                android:src="@drawable/anishaagarwal"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_name"
        android:text="Anisha Agarwal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_title"
        android:text="Android Developer"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_background"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_experience_label"
        android:text="5+"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vg33"
        app:layout_constraintTop_toBottomOf="@id/hg30"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_experience"
        android:text="Yrs Experience"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vg33"
        app:layout_constraintTop_toBottomOf="@id/txt_experience_label"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_project_label"
        android:text="5+"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/vg33"
        app:layout_constraintRight_toRightOf="@+id/vg66"
        app:layout_constraintTop_toBottomOf="@id/hg30"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_projects"
        android:text="Projects"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/vg33"
        app:layout_constraintRight_toRightOf="@+id/vg66"
        app:layout_constraintTop_toBottomOf="@id/txt_project_label"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_contact_label"
        android:text="5+"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/vg66"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hg30"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_contact"
        android:text="Happy Clients"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/vg66"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_contact_label"
        android:gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_about"
        android:elevation="5dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_bio"
                android:text="About Me"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/description"
                android:text="I m pursuing MS in Software Engineering from SJSU, I am specializing in Cloud technologies.
At present I am in 2nd Semester and will be graduating by 2021 december."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_bio"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_mobile"
        android:elevation="5dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_about"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@id/hg97"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_app_label"
                android:text="Mobile App Developer"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_app"
                android:text="I m pursuing MS in Software Engineering from SJSU, I am specializing in Cloud technologies.
At present I am in 2nd Semester and will be graduating by 2021 december."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_app_label"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"
        android:id="@+id/vg33" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"
        android:id="@+id/vg66" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        android:id="@+id/hg30" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/hg97" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>